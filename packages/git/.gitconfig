[include]
  path = ~/.gitconfig.local
  path = ~/.gitconfig.aliases

[core]
  editor = nvim
  excludesfile = ~/.gitignore-global
  pager = diff-so-fancy | less --tabs=4 -RFX

[diff]
  tool = vimdiff

[color]
  ui = auto

[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red reverse
  newNormal = green
  newHighlight = green reverse

[color "diff"]
  meta = 11
  frag = magenta italic
  commit = yellow
  old = red
  new = green
  whitespace = red reverse
  autosetuprebase = always

[push]
  default = simple

[url "git://github.com/"]
  insteadOf = gh:

[url "https://bitbucket.org/"]
  insteadOf = bb:

[credential]
  helper = cache --timeout=28800

[difftool]
  prompt = false

[commit]

[branch]
[pull]
	rebase = true
